{
  "name": "processo-gfix-backup-restore",
  "version": "0.1.5",
  "private": true,
  "description": "App desktop Windows (Electron + React + TS) para GFIX + Backup/Restore Firebird 2.5",
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "rimraf dist dist-electron",
    "clean:electron": "rimraf dist-electron",
    "clean:renderer": "rimraf dist",
    "clean:cache": "rimraf node_modules/.cache",
    "clean:logs": "rimraf \"**/TEMP/*.LOG\"",
    "clean:old": "rimraf \"**/*_OLD_*.FDB\" \"**/*_OLD_*.FBK\"",
    "clean:all": "npm run clean && npm run clean:cache && npm run clean:logs && npm run clean:old",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron:build\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron:build": "tsc -p electron/tsconfig.json -w",
    "dev:electron": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run clean:all && tsc -p electron/tsconfig.json && vite build && electron-builder",
    "dist:win": "npm run build -- -w",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.seuapp.gfixbackuprestore",
    "productName": "Processo GFIX + Backup/Restore",
    "artifactName": "${productName} ${version}.exe",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GFIX Backup/Restore"
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "wait-on": "^7.2.0"
  }
}
